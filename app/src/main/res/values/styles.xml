<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="editTextThema" parent="Widget.AppCompat.EditText">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
    </style>
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Customize your theme here. -->
        <item name="searchIcon">@color/green</item>
        <item name="android:editTextColor">@color/line_grey</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="android:backgroundTint">@color/line_grey</item>

    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
  
    <style name="CheckColor">
        <item name="colorAccent">#1DAE6A</item>
    </style>
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_custom</item>
    </style>

    <style parent="@android:style/Widget.Spinner" name="SpinnerWithoutArrow">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="DialogAddBudget" parent="Widget.MaterialComponents.CardView">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



</resources>