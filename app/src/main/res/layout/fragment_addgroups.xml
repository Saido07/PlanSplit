<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:id="@+id/relativeLayoutGroups"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPersonPicture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:foreground="@drawable/denemeresim"
                app:cardCornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/cardViewPersonPicture"
                android:text="Grup İsmi" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:fontFamily="@font/avenir"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/cardViewPersonPicture"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"
                android:hint="Grup ismi Yazınız"
                android:inputType="textPersonName" />
        </RelativeLayout>
        <LinearLayout

            android:id="@+id/linearLayoutSelectionButtons"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="1dp">

            <Button
                android:id="@+id/buttonHouse"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/avenir"
                android:layout_margin="3dp"
                android:text="Ev"
                android:textSize="8sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="215dp" />

            <Button
                android:id="@+id/buttonWork"
                android:layout_width="60dp"
                android:fontFamily="@font/avenir"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="İş"
                android:textSize="8sp"
                tools:layout_editor_absoluteX="115dp"
                tools:layout_editor_absoluteY="215dp" />

            <Button
                android:id="@+id/buttonTrip"
                android:layout_width="60dp"
                android:fontFamily="@font/avenir"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="Seyehat"
                android:textSize="8sp" />

            <Button
                android:id="@+id/buttonOther"
                android:fontFamily="@font/avenir"
                android:layout_width="60dp"
                android:layout_height="37dp"
                android:layout_margin="3dp"
                android:text="Diğer"
                android:textSize="8sp" />
        </LinearLayout
            >

        <RelativeLayout
            android:layout_below="@+id/linearLayoutSelectionButtons"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayoutButtons"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <TextView
                android:id="@+id/textViewGroupMembers"
                android:layout_width="101dp"
                android:fontFamily="@font/avenir"
                android:layout_height="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="Grup Üyeleri" />
            <Button
                android:id="@+id/buttonAddFriendToGroup"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/avenir"
                android:layout_below="@+id/textViewGroupMembers"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/addgroups_addfriendicon"
                android:text="Arkadas Ekle"
                android:textColor="#0B0B0B"
                android:textSize="10sp"
                />

            <Button
                android:id="@+id/buttonInviteToGroup"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_below="@+id/buttonAddFriendToGroup"
                android:fontFamily="@font/avenir"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/addgroups_invitetogroupicon"
                android:text="Gruba Davet Et"
                android:textColor="#0B0B0B"
                android:textSize="10sp"
                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_addgroups"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_margin="35dp"
            android:layout_height="250dp"
            android:paddingHorizontal="2dp"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/item_addgroups_person">
        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:id="@+id/relativeLayoutGroupSettings"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/textViewGroupSettings"
                android:fontFamily="@font/avenir"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:text="Grup Ayarları"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/textViewSpendCheck"
                android:fontFamily="@font/avenir"
                android:layout_width="181dp"
                android:layout_height="20dp"
                android:layout_below="@+id/textViewGroupSettings"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:text="Harcama ekleme kontrolü"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/dreidSecurePay"
                android:layout_width="181dp"
                android:layout_height="19dp"
                android:layout_below="@+id/textViewSpendCheck"
                android:fontFamily="@font/avenir"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:text="Çift doğrulamalı ödeme"
                app:layout_constraintStart_toStartOf="parent" />

            <Switch
                android:id="@+id/switchSpendCheck"
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/textViewSpendCheck"

                />

            <Switch
                android:id="@+id/switchDreidSecurePay"
                android:layout_marginTop="50dp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/dreidSecurePay"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutGroupSettings"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/buttonMakeGroup"
                android:layout_width="246dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/avenir"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:shadowColor="#EFEDED"
                android:background="@drawable/button_smooth_corner"
                android:text="Grupu Oluştur"
                android:textSize="8sp"
                />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>


