<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:id="@+id/relativeLayoutGroups"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPersonPicture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:foreground="@drawable/denemeresim"
                app:cardCornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/cardViewPersonPicture"
                android:fontFamily="@font/avenir"
                android:text="Grup İsmi" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/cardViewPersonPicture"
                android:fontFamily="@font/avenir"
                android:hint="Grup ismi Yazınız"
                android:inputType="textPersonName" />
        </RelativeLayout>

        <LinearLayout

            android:id="@+id/linearLayoutSelectionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rgroupButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:paddingHorizontal="50dp"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbuttonHouse"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/home"
                    android:fontFamily="@font/avenir"
                    android:textColor="@color/white"
                    android:checked="true"
                    android:button="@android:color/transparent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_selector"
                    android:elevation="5dp"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbuttonWork"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:fontFamily="@font/avenir"
                    android:text="@string/work"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_selector"
                    android:elevation="5dp"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbuttonTrip"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/trip"
                    android:fontFamily="@font/avenir"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_selector"
                    android:elevation="5dp" />
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbuttonOther"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/avenir"
                    android:gravity="center"
                    android:text="@string/other"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_selector"
                    android:elevation="5dp" />

            </RadioGroup>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linearLayoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutSelectionButtons"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textViewGroupMembers"
                android:gravity="center|left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/avenir"
                android:text="Grup Üyeleri"
                android:textSize="25sp"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_addgroups"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:paddingHorizontal="2dp"
            tools:listitem="@layout/item_addgroups_person"></androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/relativeLayoutGroupSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewGroupSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/avenir"
                    android:text="Grup Ayarları"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewSpendCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_below="@+id/textViewGroupSettings"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/avenir"
                            android:text="Harcama ekleme kontrolü"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/dreidSecurePay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textViewSpendCheck"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/avenir"
                            android:text="Çift doğrulamalı ödeme"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="5dp">

                        <Switch
                            android:id="@+id/switchSpendCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <Switch
                            android:id="@+id/switchDreidSecurePay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutGroupSettings"
            android:layout_gravity="center">

            <Button
                android:id="@+id/buttonMakeGroup"
                android:layout_width="246dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_smooth_corner"
                android:fontFamily="@font/avenir"
                android:shadowColor="#EFEDED"
                android:text="@string/create_group"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>


