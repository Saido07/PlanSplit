<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_addgroups"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="140dp"
        tools:listitem="@layout/item_addgroups_person">
    </androidx.recyclerview.widget.RecyclerView>

    <Switch
        android:id="@+id/switchSpendCheck"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/switch2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="181dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        android:text="Çift doğrulamalı ödeme"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewGroupSettings"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        android:text="Grup Ayarları"
        app:layout_constraintBottom_toTopOf="@+id/textViewSpendCheck"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonInviteToGroup"
        android:layout_width="334dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/addgroups_invitetogroupicon"
        android:text="Gruba Davet Et"
        android:textColor="#0B0B0B"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddFriendToGroup" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/cardViewPersonPicture"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/buttonHouse"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:text="Ev"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="215dp" />

        <Button
            android:id="@+id/buttonWork"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:text="İş"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="215dp" />

        <Button
            android:id="@+id/buttonTrip"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:text="Seyehat"
            android:textSize="8sp" />

        <Button
            android:id="@+id/buttonOther"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_margin="3dp"
            android:text="Diğer"
            android:textSize="8sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="212dp"
        android:text="Grup İsmi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="238dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Grup ismi Yazınız"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textViewGroupMembers"
        android:layout_width="101dp"
        android:layout_height="21dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Grup Üyeleri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/buttonAddFriendToGroup"
        android:layout_width="331dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/addgroups_addfriendicon"
        android:text="Arkadas Ekle"
        android:textColor="#0B0B0B"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGroupMembers" />

    <TextView
        android:id="@+id/textViewSpendCheck"
        android:layout_width="181dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        android:text="Harcama ekleme kontrolü"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="407dp"
        android:layout_height="57dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/addgroups_bottom" />

    <Button
        android:id="@+id/buttonMakeGroup"
        android:layout_width="246dp"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:shadowColor="#EFEDED"
        android:text="Grupu Oluştur"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPersonPicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        android:foreground="@drawable/addgroups_ustekran"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>