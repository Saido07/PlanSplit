<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginHorizontal="5dp">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_group_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/group_itemview_bg_green"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/imageIv"
                android:src="@drawable/ic_home_black_24dp"
                android:background="@drawable/group_itemview_bg_profil_green"
            />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageIv_extra"
                android:src="@drawable/debt_remind"
                android:layout_toRightOf="@id/group_titleTv"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_titleTv"
                android:text="Group Title"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:textColor="@color/group_border_green"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imageIv"
                android:layout_toEndOf="@id/imageIv"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/costTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_centerVertical="true"
                android:text="Cost TL"
                android:textColor="@color/green"
                android:textSize="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>