<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.FragmentControllers.mygroup.EventsFragment">

    <RelativeLayout
        android:id="@+id/w"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/item_user_layout"
                layout="@layout/item_group_events_user" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/events_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q"
            android:layout_marginTop="5dp"
            android:elevation="5dp"
            android:background="@drawable/order_status_background">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutRecyclerViewGroupEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/events_date"
            android:layout_marginTop="5dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewGroupEvents"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>