<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginHorizontal="5dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_share_method_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_share_method_picture"
                android:layout_width="49dp"
                android:layout_height="47dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:foreground="@drawable/denemeresim"
                app:cardCornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/checkbox_share_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/textView_share_method_name">

            </CheckBox>

            <TextView
                android:id="@+id/textView_share_method_name"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/cardView_share_method_picture"
                android:text="Name"
                android:textSize="18sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>